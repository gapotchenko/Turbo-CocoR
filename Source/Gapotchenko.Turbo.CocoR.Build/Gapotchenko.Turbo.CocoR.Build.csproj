<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <NoBuild>true</NoBuild>
  </PropertyGroup>

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <Description>Turbo Coco/R build integration provides the automatic compile-time generation of scanner and parser files for attributed grammars in a project.</Description>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <NuspecFile>Package.nuspec</NuspecFile>
  </PropertyGroup>

  <Target Name="PrepareNuGetSpec" BeforeTargets="_GetPackageFiles">

    <PropertyGroup>
      <_PackageContentDirectory>$(IntermediateOutputPath)nuget\</_PackageContentDirectory>
    </PropertyGroup>

    <RemoveDir Directories="$(_PackageContentDirectory)" />

    <ItemGroup>
      <_ProjectsToPublish Include="$(MSBuildThisFileDirectory)..\Gapotchenko.Turbo.CocoR\Gapotchenko.Turbo.CocoR.csproj">
        <AdditionalProperties>TargetFramework=net7.0;UseAppHost=false;Configuration=$(Configuration);PublishDir=$(MSBuildThisFileDirectory)$(_PackageContentDirectory)tools\turbo-coco\</AdditionalProperties>
      </_ProjectsToPublish>
    </ItemGroup>

    <MSBuild Projects="@(_ProjectsToPublish)" Targets="Publish" BuildInParallel="$(BuildInParallel)" />

    <ItemGroup>
      <_CopyItems Include="Package\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(_CopyItems)" DestinationFolder="$(_PackageContentDirectory)\%(RecursiveDir)" />

    <Copy SourceFiles="$(MasteringDir)Assets\NuGet\Package Icon.png" DestinationFiles="$(_PackageContentDirectory)\docs\assets\package-icon.png" />

    <PropertyGroup>
      <NuspecProperties>id=$(PackageId);version=$(PackageVersion);authors=$(Authors);requireLicenseAcceptance=$(PackageRequireLicenseAcceptance);licenseExpression=$(PackageLicenseExpression);projectUrl=$(PackageProjectUrl);description=$(Description);copyright=$(Copyright);tags=$(PackageTags)</NuspecProperties>
      <NuspecBasePath>$(_PackageContentDirectory)</NuspecBasePath>
    </PropertyGroup>

  </Target>

</Project>
