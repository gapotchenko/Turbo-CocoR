<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <NoBuild>true</NoBuild>
  </PropertyGroup>

  <PropertyGroup>
    <IsPackable>true</IsPackable>
    <Description>Turbo Coco/R build integration provides the automatic compile-time generation of scanner and parser files for attributed grammars in a project.</Description>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <NuspecFile>Package.nuspec</NuspecFile>
  </PropertyGroup>

  <Target Name="BuildPackageContent" BeforeTargets="_GetPackageFiles">

    <PropertyGroup>
      <_PackageContentDir>$(IntermediateOutputPath)nuget\</_PackageContentDir>
    </PropertyGroup>

    <RemoveDir Directories="$(_PackageContentDir)" />

    <ItemGroup>
      <_ProjectsToPublish Include="..\..\..\Gapotchenko.Turbo.CocoR\Gapotchenko.Turbo.CocoR.csproj">
        <AdditionalProperties>TargetFramework=net7.0;UseAppHost=false;Configuration=$(Configuration);PublishDir=$(MSBuildThisFileDirectory)$(_PackageContentDir)tools\</AdditionalProperties>
      </_ProjectsToPublish>
    </ItemGroup>

    <MSBuild Projects="@(_ProjectsToPublish)" Targets="Publish" BuildInParallel="$(BuildInParallel)" />

    <ItemGroup>
      <_ProjectsToBuild Include="..\MSBuild\Gapotchenko.Turbo.CocoR.Build.MSBuild.Tasks\Gapotchenko.Turbo.CocoR.Build.MSBuild.Tasks.csproj">
        <AdditionalProperties>Configuration=$(Configuration)</AdditionalProperties>
      </_ProjectsToBuild>
    </ItemGroup>

    <MSBuild Projects="@(_ProjectsToBuild)" Targets="Build" BuildInParallel="$(BuildInParallel)" />

    <ItemGroup>
      <_CopyItems Remove="@(_CopyItems)" />
      <_CopyItems Include="..\MSBuild\Gapotchenko.Turbo.CocoR.Build.MSBuild.Tasks\bin\$(Configuration)\**\*.*" />
      <_CopyItems Remove="..\MSBuild\Gapotchenko.Turbo.CocoR.Build.MSBuild.Tasks\bin\$(Configuration)\**\*.deps.json" />
    </ItemGroup>
    <Copy SourceFiles="@(_CopyItems)" DestinationFolder="$(_PackageContentDir)\tools\Integration\MSBuild\%(RecursiveDir)" />

    <ItemGroup>
      <_CopyItems Remove="@(_CopyItems)" />
      <_CopyItems Include="..\MSBuild\Scripts\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(_CopyItems)" DestinationFolder="$(_PackageContentDir)\tools\Integration\MSBuild\%(RecursiveDir)" />

    <ItemGroup>
      <_CopyItems Remove="@(_CopyItems)" />
      <_CopyItems Include="Package\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(_CopyItems)" DestinationFolder="$(_PackageContentDir)\%(RecursiveDir)" />

    <Copy SourceFiles="$(MasteringDir)Assets\NuGet\Package Icon.png" DestinationFiles="$(_PackageContentDir)\docs\assets\package-icon.png" />
    <Copy SourceFiles="..\README.md" DestinationFolder="$(_PackageContentDir)\docs" />

    <PropertyGroup>
      <NuspecProperties>
        id=$(PackageId);
        version=$(PackageVersion);
        authors=$(Authors);
        requireLicenseAcceptance=$(PackageRequireLicenseAcceptance);
        licenseExpression=$(PackageLicenseExpression);
        projectUrl=$(PackageProjectUrl);
        description=$(Description);
        copyright=$(Copyright);
        tags=$(PackageTags);
        repositoryType=$(RepositoryType);
        repositoryUrl=$(RepositoryUrl)
      </NuspecProperties>
      <NuspecBasePath>$(_PackageContentDir)</NuspecBasePath>
    </PropertyGroup>

  </Target>

</Project>
